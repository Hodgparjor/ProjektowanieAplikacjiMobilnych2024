<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="10dp"
    tools:context=".UI.ForecastFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeMinTextSize="32sp"
        android:autoSizeStepGranularity="1sp"
        android:text="Łódź"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/primary"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/city"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/hourlyWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/time_3h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="9:00"/>
                    <ImageView
                        android:id="@+id/icon_3h"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/thunderstorm"/>
                    <TextView
                        android:id="@+id/temp_3h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="27°C"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/time_6h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="12:00"/>
                    <ImageView
                        android:id="@+id/icon_6h"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/fewclouds"/>
                    <TextView
                        android:id="@+id/temp_6h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="27°C"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/time_9h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="15:00"/>
                    <ImageView
                        android:id="@+id/icon_9h"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/showerrain"/>
                    <TextView
                        android:id="@+id/temp_9h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="27°C"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/time_12h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="18:00"/>
                    <ImageView
                        android:id="@+id/icon_12h"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/snow"/>
                    <TextView
                        android:id="@+id/temp_12h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="27°C"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/dailyWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/dayText_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="Today"/>
                    <TextView
                        android:id="@+id/dayTemp_today"
                        android:paddingLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="26°C"/>
                    <ImageView
                        android:id="@+id/dayImg_today"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fewclouds"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/dayText_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="Monday"/>
                    <TextView
                        android:id="@+id/dayTemp_1"
                        android:paddingLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="25°C"/>
                    <ImageView
                        android:id="@+id/dayImg_1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fewclouds"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/dayText_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="Tuesday"/>
                    <TextView
                        android:id="@+id/dayTemp_2"
                        android:paddingLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="24°C"/>
                    <ImageView
                        android:id="@+id/dayImg_2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fewclouds"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/dayText_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="Wednesday"/>
                    <TextView
                        android:id="@+id/dayTemp_3"
                        android:paddingLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="23°C"/>
                    <ImageView
                        android:id="@+id/dayImg_3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fewclouds"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/dayText_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="Thursday"/>
                    <TextView
                        android:id="@+id/dayTemp_4"
                        android:paddingLeft="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:text="22°C"/>
                    <ImageView
                        android:id="@+id/dayImg_4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/fewclouds"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>