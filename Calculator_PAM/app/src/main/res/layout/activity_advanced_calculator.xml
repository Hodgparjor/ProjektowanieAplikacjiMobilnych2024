            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/calculator_secondary_button"
            android:textColor="@color/secondary"
            android:text="C"
            android:autoSizeMaxTextSize="@dimen/calculatorButtonMaxTextSize"
            android:autoSizeMinTextSize="@dimen/calculatorButtonMinTextSize"
            android:autoSizeStepGranularity="2sp"
