            android:autoSizeMaxTextSize="@dimen/calculatorButtonMaxTextSize"
            android:autoSizeMinTextSize="@dimen/calculatorButtonMinTextSize"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:layout_margin="@dimen/calculatorButtonMargin"/>

