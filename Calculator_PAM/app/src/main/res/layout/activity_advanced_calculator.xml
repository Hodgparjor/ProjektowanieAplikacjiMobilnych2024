        android:layout_height="0dp"
        android:layout_weight="20">

        <Button
            android:id="@+id/allClearBtn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@drawable/inverted_calc_button"
            android:textColor="@color/background"
            android:text="AC"
            android:autoSizeMaxTextSize="@dimen/calculatorButtonMaxTextSize"
            android:autoSizeMinTextSize="@dimen/calculatorButtonMinTextSize"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:layout_margin="@dimen/calculatorButtonMargin"/>

        <Button
            android:id="@+id/clearBtn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
