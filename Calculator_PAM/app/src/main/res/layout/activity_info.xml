<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/primary"
        android:text="CalcThis"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_secondary"
        android:layout_marginHorizontal="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/secondary"
        android:textSize="18sp"
        android:text="This application was created as a first project task for the course &quot;Projektowanie Aplikacji Mobilnych&quot; (eng. Mobile Application Development) at Lodz University of Technology.
&#xA;The application itself offers calculator functionality, separated into two modes - basic calculator and advanced calculator (aka scientific)."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Author: Aleksander Brzostowski, ID242125"
        android:textColor="@color/background_secondary"
        android:layout_margin="20sp"
        android:textSize="14sp"/>

</LinearLayout>